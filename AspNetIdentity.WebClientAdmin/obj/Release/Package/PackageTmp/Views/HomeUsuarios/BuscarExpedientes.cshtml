@section Scripts
             {
    @Scripts.Render("~/Scripts/ModalControl.js")
    
}
<div class="card mb-4 wow fadeIn">
    <!--Card content-->
    <div class="card-body d-sm-flex justify-content-between">
        <h3 class="card-title">Buscar Expediente </h3>
    </div>
</div>

<div class="row wow fadeIn">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("BuscarExpedienteRun", "HomeUsuarios", FormMethod.Post, htmlAttributes: new { id = "car-form", @name = "car-form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-horizontal">
                    <div class="row">

                        <div class="col-md-12  text-center">
                            Indique el Numero de Expediente o Parte de el, Ejemplo (B47018900012009 , B47018)
                            <hr />
                            <input type="text" name="key" id="key" value="" placeholder="B47018900012XXX" />
                        </div>

                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-md-offset-2 col-md-12 text-center">
                            <input type="submit" id="GuardarBtm" value="Buscar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>
