            function TablaGeneral() {
                 $.ajax({
                    type: 'POST',
                    url: '@Url.Action("ListGeneral")',
                    dataType: 'json',
                    data: { Id: $("#DateInfo").val() },
                    success: function (s) {
                        oTable.fnClearTable();
                        debugger;

                        $.each(s, function (i, obj) {

                            var Delete = "";

                            if ($("#RolUsuario").val() == "Administrator") {
                                Delete =  '<z1 target="_blank" href=' + obj.Id + '  style="color: #013ADF;"><i class="fa fa-times-circle" aria-hidden="true"></i></z1>';
                            }

                            oTable.fnAddData([
                                obj.Id,
                                obj.FechaActividadS ,
                                obj.NombreProceso ,
                                obj.NombreModalidad ,
                                obj.RolUsuario ,
                                obj.NombreUsuario ,
                                obj.NombreRolActividad ,
                                obj.NombreActividad ,
                                obj.Cantidad ,
                                obj.Observacion,
                                Delete
                            ]);
                        });
                        return false;
                    },
