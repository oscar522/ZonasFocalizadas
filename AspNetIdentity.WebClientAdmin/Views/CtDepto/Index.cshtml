@model IEnumerable<AspNetIdentity.Models.HvCtDeptoModel>


@section Scripts
             {
    @Scripts.Render("~/bundles/jqueryval") @Scripts.Render("~/Scripts/ModalControl.js")

    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://code.jquery.com/ui/1.11.0/jquery-ui.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
}

<div class="card mb-4 wow fadeIn">

    <!--Card content-->
    <div class="card-body d-sm-flex justify-content-between">
        <h3 class="card-title">Departamento </h3>
        <p class="card-text">Hoja de Vida / Departamento</p>
    </div>

</div>
<div class="row wow fadeIn">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">  <a href="#" onclick="EjecutarModalSlim ('','HvCtDepto','Crear', 'CREAR CARGO'); return false;">Crear Departamento</a></div>
            <div class="card-body">

                <table class="table table-hover" cellspacing="0" width="100%">
                    <thead>
                        <tr>

                            <th>
                                @Html.DisplayNameFor(model => model.NOMBRE_PAIS)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NOMBRE)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.NOMBRE_PAIS)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NOMBRE)
                                </td>
                                <td>

                                    <a href="#" onclick="EjecutarModalSlim ('@item.ID_CT_DEPTO','HvCtDepto','Edit' , 'MODIFICAR DEPARTAMENTO'); return false;" title="Modificar" style="color: #013ADF;"><i class="fa fa-refresh" aria-hidden="true"></i></a> |
                                    <a href="#" onclick="EjecutarModalSlim ('@item.ID_CT_DEPTO','HvCtDepto','Details', 'DETALLE DEPARTAMENTO'); return false;" title="Detalle" style="color: #013ADF;"><i class="fa fa-search" aria-hidden="true"></i> </a> |
                                    <a href="#" onclick="EjecutarModalSlim ('@item.ID_CT_DEPTO','HvCtDepto','Delete', 'BORRAR DEPARTAMENTO'); return false;" title="Borrar" style="color: #013ADF;"><i class="fa fa-trash" aria-hidden="true"></i></a> |
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
