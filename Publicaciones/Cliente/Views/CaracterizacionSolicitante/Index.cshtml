@model IEnumerable<AspNetIdentity.Models.CaracterizacionSolicitanteModel>

@section Scripts
{

    <script type="text/javascript">
        $(document).ready(function () {


             var oTable = $('#table_idd').dataTable({

                "order": [[1, "desc"]],
                "language": { "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json" },
                "pageLength": 10,
                "searching": true,
                dom: "B<'row'<'col-sm-6'l><'col-sm-6'f>><'row'<'col-sm-12'tr>><'row'<'col-sm-5'i><'col-sm-7'<'#colvis'>p>>",
                buttons: [
                    { "extend": 'pdf', "text": 'Pdf', "className": 'btn-outline-success' },
                    { "extend": 'excel', "text": 'Exc', "className": ' btn-outline-success ' },
                    { "extend": 'print', "text": 'Imp', "className": ' btn-outline-success ' }
                ],
               
            });


        console.log("ready!");
    });
    </script>

}
<div class="card mb-4 wow fadeIn">

    <!--Card content-->
    <div class="card-body d-sm-flex justify-content-between">
        <h3 class="card-title">Caracterizacion del Solicitante </h3>
    </div>

</div>
<div class="row wow fadeIn">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">  </div>
            <div class="card-body">
                <div class="table-responsive text-nowrap">
                    <table class="table" id="table_idd">
                        <thead>
                            <tr>
                                <th> Numero Expediente </th>
                                <th> Departamento </th>
                                <th> Municipio </th>
                                <th> Fecha Modificacion</th>
                                <th> Gestion </th>
                                <th></th>
                            </tr>
                        <thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                
                                    <td>
                                        <a target="_blank" href='@Url.Action("../HomeUsuarios/Details", "Details", new { IdTable = item.IdExpediente })' title='Modificar' style='color: #013ADF;'> @Html.DisplayFor(modelItem => item.NumeroExpediente) <i class='fa fa-eye' aria-hidden='true'></i></a>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NombreDepto) 
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NombreMunicipio) 
                                    </td>
                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdAspNetUser)
                                    </td>
                                    
                                    @if (item.Gestion == 1)
                                    {
                                    <td>
                                       Con gestion
                                    </td>
                                    }else{{
                                    <td>
                                       sin gestion
                                    </td>
                                    }}
                                    <td>
                                        <a href='@Url.Action("../CaracterizacionSolicitante/Edit", "Edit", new { IdTable = item.Id })' title='Modificar' style='color: #013ADF;'><i class='fa fa-refresh' aria-hidden='true'></i></a>
                                    </td>
                                   
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

    