@model AspNetIdentity.Models.ConceptoModel

<!-- Heading -->
<div class="card mb-4 wow fadeIn">

    <!--Card content-->
    <div class="card-body d-sm-flex justify-content-between">
        <h4 class="mb-2 mb-sm-0 pt-1">
            <span>Solicitar Concepto (nombre usuario que logueado )</span>
        </h4>
    </div>

</div>
<!-- Heading -->
<div class="card">
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-6">
                    <div class="table-responsive text-nowrap">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-md-2"> Motivo del Concepto :</label>
                                <div class="col-md-10">
                                    @Html.DropDownList("IdCausa", new SelectList(string.Empty, "Value", "Text"), "Seleccione", new { @class = "form-control", @onchange = "return ChangePais()" })
                                    @Html.ValidationMessageFor(model => model.IdCausa, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Anexo, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Anexo, new { htmlAttributes = new { @class = "form-control", @type = "file" } })
                                    @Html.ValidationMessageFor(model => model.Anexo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <hr />
                                <label class="control-label col-md-12">
                                    Buscar Expediente
                                </label>
                                <hr />
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="control-label col-md-12"> Buscar Expediente </label>
                                    <div class="form-group">
                                        <input type="text" name="key" id="key" value="" class="form-control" placeholder="B47018900012XXX" />
                                        <input type="submit" id="GuardarBtm" value="Buscar" class="btn btn-default" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="control-label col-md-12"> Expediente Seleccionado </label>
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.IdExpediente, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.IdExpediente, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <table class="table table-hover " id="table_Busqueda">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Id
                                                </th>
                                                <th></th>
                                                <th>
                                                    Num. Expediente
                                                </th>
                                                <th>
                                                    Departamento
                                                </th>
                                                <th>
                                                    Municipio
                                                </th>
                                                <th>
                                                    Vereda
                                                </th>
                                                <th>
                                                    Nombre Solitante
                                                </th>
                                                <th>
                                                    Identificación
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        *  @Html.LabelFor(model => model.Soporte, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Soporte, new { htmlAttributes = new { @class = "form-control", @type = "file" } })
                            @Html.ValidationMessageFor(model => model.Soporte, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.IdOrfeo, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.IdOrfeo, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.IdOrfeo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <hr />
                        <label class="control-label col-md-12"> Asociar Usuarios </label>
                        <hr />
                        <div class="row">
                            <div class="col-md-4">
                                <label class="control-label col-md-6"> Rol Usuario</label>
                                <div class="form-group">
                                    @Html.DropDownList("IdRole", new SelectList(string.Empty, "Value", "Text"), "Seleccione", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IdCausa, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="control-label col-md-6"> Usuario</label>
                                <div class="form-group">
                                    @Html.DropDownList("IdUsers", new SelectList(string.Empty, "Value", "Text"), "Seleccione", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.IdCausa, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input type="submit" id="AsociarUser" value="Asociar" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <table class="table table-hover " id="table_Asociados">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Id
                                                </th>
                                                <th>
                                                    Id Concepto
                                                </th>
                                                <th>
                                                    Nombre Usuario Asociado
                                                </th>
                                                <th>
                                                    Rol
                                                </th>
                                                <th>
                                                    Fecha de Insercion
                                                </th>
                                                <th>
                                                    Estado
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

